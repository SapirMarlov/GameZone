<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:padding="16dp">

    <!-- כותרת מסך מנהל -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="לוח בקרה - מנהל החנות"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- כפתורים לניהול מערכת -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/manage_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ניהול הזמנות"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/manage_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ניהול מלאי"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/customer_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פניות לקוחות"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/view_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="דוחות עסקיים"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/manage_employees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ניהול עובדים"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/system_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הגדרות מערכת"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</LinearLayout>
