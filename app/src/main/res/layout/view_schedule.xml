<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="right"
        android:layoutDirection="rtl"> <!-- 住驻转  转 layoutDirection -->

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2D3748"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" GameZone              "
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CBD5E1"
            android:layout_marginTop="4dp"/>

        <!-- 转专转 专砖转 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 砖专,   砖转 砖 砖注 拽专"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

        <!-- 转 爪转   -->
        <!-- 住驻转  转 layoutDirection -->

        <!-- 驻专 砖转 注专  专砖 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 专砖"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 1:  转"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 2: 住转 驻专 注专转"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </LinearLayout>

        <!-- 驻专 砖转 注专  砖 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 砖"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 1: 注 "
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 2: 爪专转 砖拽 注专转"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </LinearLayout>

        <!-- 驻专 砖转 注专  砖砖 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 砖砖"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 1:  砖拽"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </LinearLayout>

        <!-- 驻专 砖转 注专  专注 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 专注"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 1: 转 转"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </LinearLayout>

        <!-- 驻专 砖转 注专  砖 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 砖"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 1: 爪注 拽转 注专转"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </LinearLayout>

        <!-- 驻专 砖转 注专  砖砖 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 砖砖"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖 1: 注 转 注专转"
                android:textSize="16sp"
                android:textColor="#475569"
                android:layoutDirection="rtl"/> <!-- 住驻转  转 layoutDirection -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
