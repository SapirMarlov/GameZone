<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:padding="16dp">

    <!-- רשימת מוצרים בסל -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- פריט לדוגמה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="5dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ps5"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם המוצר"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₪1,999"
                        android:textSize="14sp"
                        android:textColor="#007bff"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- כפתור המשך לתשלום -->
    <Button
        android:id="@+id/continue_to_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="המשך לתשלום"
        android:backgroundTint="#007bff"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- בחירת אמצעי תשלום -->
    <RadioGroup
        android:id="@+id/payment_method_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/payment_credit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כרטיס אשראי"/>

        <RadioButton
            android:id="@+id/payment_paypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayPal"/>
    </RadioGroup>

    <!-- סיכום הזמנה -->
    <TextView
        android:id="@+id/order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="סכום כולל: ₪1,999"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"/>

    <!-- כפתור אישור רכישה -->
    <Button
        android:id="@+id/confirm_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אישור רכישה"
        android:backgroundTint="#28a745"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>