<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F2F5">

    <!-- כותרת המסך -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A5568"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎮GameZone🎮   מחפשים שותפים למשחק"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- כותרת בחירת קונסולה -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בחר את הפלטפורמת משחק שלך 🎮"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:gravity="center"
        android:padding="12dp"
        android:background="#FFFFFF"/>

    <!-- סרגל סינון קונסולות -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <Button
                android:id="@+id/filter_playstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlayStation"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3B82F6"/>

            <Button
                android:id="@+id/filter_xbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xbox"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#059669"/>

            <Button
                android:id="@+id/filter_nintendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#D97706"
                android:text="Nintendo" />

            <Button
                android:id="@+id/filter_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC Gaming"
                android:backgroundTint="#7C3AED"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- שורת חיפוש -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/search_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="חפש משחק או שחקן..."
            android:padding="10dp"
            />
    </LinearLayout>

    <!-- רשימת השותפים למשחק -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/players_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- דגם כרטיס שחקן -->
            <androidx.cardview.widget.CardView
                android:id="@+id/player_card_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/player_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ps5"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/player_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="שם שחקן, גיל"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/player_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="מחפש שותפים למשחק CALL OF DUTY "
                            android:textColor="#4A5568"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/create_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="פרסם מודעה חדשה"
        android:backgroundTint="#28A745"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="16sp"/>
</LinearLayout>