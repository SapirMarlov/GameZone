<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎮 GameZone 🎮     📞 פניות עובדים"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3182CE"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp" />

    <!-- רשימת פניות עובדים -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- פנייה 1 - עם סימן לא נקראה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:gravity="start"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ארקדי פנה עם שאלה לגבי המשמרות"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:textSize="14sp"
                    android:textColor="#A0AEC0" />

                <!-- סימן הודעה שלא נקראה -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="24sp"
                    android:textColor="#F56565"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- פנייה 2 - עם סימן לא נקראה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:gravity="start"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="דניאל שאל על השעות המותאמות"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:15"
                    android:textSize="14sp"
                    android:textColor="#A0AEC0" />

                <!-- סימן הודעה שלא נקראה -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="24sp"
                    android:textColor="#F56565"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
