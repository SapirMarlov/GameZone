<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:layoutDirection="rtl">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎧 אוזניות | GameZone"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#E2E8F0"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מיין לפי:"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Headphone 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎧"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="אוזניות גיימינג אלחוטיות"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="אוזניות עם סאונד היקפי 7.1 וחיי סוללה ארוכים"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪799"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_headphone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Headphone 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎧"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="אוזניות ספורט בלוטות'"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="עמידות בפני זיעה, חיי סוללה עד 8 שעות"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪299"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_headphone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Headphone 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎧"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="אוזניות סטודיו מקצועיות"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="איכות סאונד גבוהה, מתאים להקלטות ומיקס"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪1,499"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_headphone_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Headphone 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎧"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="אוזניות True Wireless"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ביטול רעשים אקטיבי, אטימות למים"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪549"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_headphone_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

