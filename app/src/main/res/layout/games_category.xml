<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:layoutDirection="rtl">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎮 משחקים | GameZone"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp" />

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/search_games"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="חפש משחקים..."
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp" />

    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Game 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎮"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FIFA 25"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PlayStation 5"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪259"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Game 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎮"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Call of Duty: Black Ops 6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xbox Series X"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪299"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Game 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎮"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Legend of Zelda"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nintendo Switch"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪249"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Game 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎮"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grand Theft Auto VI"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PlayStation 5, Xbox Series X"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪349"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Game 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🎮"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:background="#E2E8F0"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minecraft"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="כל הפלטפורמות"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₪129"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3182CE" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>