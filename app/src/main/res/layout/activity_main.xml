<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner_promo" />

                <TextView
                    android:id="@+id/categories_name_in_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="33sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Scrollable button container -->
            <HorizontalScrollView
                android:id="@+id/horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:backgroundTint="#6366F1"
                        android:text="🔑 התחברות"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/user_profile_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:backgroundTint="#34D399"
                        android:text="👤 אזור אישי"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/cart_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:backgroundTint="#FFD700"
                        android:text="🛒 עגלה"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/categories_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:backgroundTint="#FF6347"
                        android:text="📋 קטגוריות"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/promotions_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:backgroundTint="#32CD32"
                        android:text="💥 מבצעים"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/search_players_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:backgroundTint="#00BFFF"
                        android:text="🔍 חיפוש שחקנים"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </HorizontalScrollView>

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@android:drawable/editbox_background"
                android:hint="חפש מוצר..."
                android:padding="14dp"
                android:textDirection="rtl"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/product_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- PS5 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:id="@+id/ps5_image"
                                android:layout_width="158dp"
                                android:layout_height="114dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ps5"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PlayStation 5"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="קונסולת גיימינג מתקדמת עם גרפיקה מרהיבה"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₪2,499"
                                android:textColor="#28A745"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                            <Button
                                android:id="@+id/add_ps5_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="➕ הוסף לעגלה"
                                android:backgroundTint="#4CAF50"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Nintendo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="8dp">
                            <ImageView
                                android:layout_width="168dp"
                                android:layout_height="133dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nintendo"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nintendo Switch OLED"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="קונסולה ניידת עם מסך OLED מרהיב"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₪1,799"
                                android:textColor="#28A745"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                            <Button
                                android:id="@+id/add_nintendo_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="➕ הוסף לעגלה"
                                android:backgroundTint="#4CAF50"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- ASUS -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp">
                            <ImageView
                                android:layout_width="166dp"
                                android:layout_height="131dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/asus"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ASUS ROG Strix G15"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="מחשב גיימינג עם כרטיס גרפי RTX"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₪6,999"
                                android:textColor="#28A745"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                            <Button
                                android:id="@+id/add_asus_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="➕ הוסף לעגלה"
                                android:backgroundTint="#4CAF50"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Razer -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="153dp"
                                android:layout_height="132dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/raze" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Razer Viper V2 Pro"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="עכבר גיימינג אלחוטי מקצועי"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="₪599"
                                android:textColor="#28A745"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/add_razer_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#4CAF50"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="➕ הוסף לעגלה"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
