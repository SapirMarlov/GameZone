<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F7FAFC"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עדכון מלאי         🎮 GameZone 🎮"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#ffffff"
        android:elevation="6dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ps5"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/product_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS5-001"
                android:textSize="14sp"
                android:textColor="#2D3748"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₪2,499"
                android:textSize="14sp"
                android:textColor="#3182CE"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/current_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="במלאי: 15 יחידות"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בחר פעולה:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/action_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="הוספה למלאי"
            android:textColor="#2D3748"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="הסרה מהמלאי"
            android:textColor="#2D3748"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#ffffff"
        android:elevation="6dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כמות לעדכון:"
            android:textSize="16sp"
            android:textColor="#2D3748"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- כפתור מינוס פשוט, בדומה לסגנון באפליקציה -->
            <Button
                android:id="@+id/button_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:backgroundTint="#3182CE"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"/>

            <EditText
                android:id="@+id/edit_quantity"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textColor="#2D3748"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginHorizontal="12dp"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"/>

            <!-- כפתור פלוס פשוט, בדומה לסגנון באפליקציה -->
            <Button
                android:id="@+id/button_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="18sp"
                android:backgroundTint="#3182CE"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#ffffff"
        android:elevation="6dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סיבת השינוי (אופציונלי):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edit_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="לדוגמה: הזמנה חדשה, החזרה מלקוח, ספירת מלאי"
            android:textSize="14sp"
            android:textColor="#2D3748"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:gravity="right"
            android:minLines="2"
            android:inputType="textMultiLine"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="עדכן מלאי"
            android:textSize="16sp"
            android:padding="14dp"
            android:backgroundTint="#3182CE"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>