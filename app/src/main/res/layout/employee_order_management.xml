<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:padding="16dp">

    <!-- כותרת מסך בית לעובד -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מסך בית - עובד"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- כפתורים למעבר למסכים נוספים -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/go_to_new_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="יצירת הזמנה חדשה"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/go_to_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ניהול הזמנות"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/go_to_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ניהול מלאי"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/go_to_customer_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פניות לקוחות"
            android:backgroundTint="#007bff"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</LinearLayout>