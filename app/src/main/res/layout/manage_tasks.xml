<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:padding="16dp"
    android:gravity="right">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layoutDirection="rtl">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  GameZone 
      砖转"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp"/>

    <!-- 转专转 注 转专 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="锔  砖转    11.3.2025  "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layoutDirection="rtl"/>

    <!-- 转  砖转 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 驻专 砖 注专  注 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- 砖 注, 转驻拽 住住 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" (专)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="拽: 住专爪"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="住住: 注"
                    android:textSize="16sp"
                    android:textColor="#E53E3E"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="砖: 注 转 注专转"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 砖: 9:00 - 17:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

            <!-- 驻专 砖 注专 注 住祝 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- 砖 注, 转驻拽 住住 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="专拽 (注)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="拽: 专转"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="住住: 转"
                    android:textSize="16sp"
                    android:textColor="#F6AD55"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="砖: 注  注专转"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 砖: 10:00 - 18:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

            <!-- 驻专 砖 注专 注 住祝 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- 砖 注, 转驻拽 住住 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注 (转 转)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="拽: 转 转"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="住住: 砖"
                    android:textSize="16sp"
                    android:textColor="#48BB78"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="砖: 驻转专 注转 转"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 砖: 8:00 - 16:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

            <!-- 驻专 砖 注专 注 住祝 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- 砖 注, 转驻拽 住住 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="住驻专 ()"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="拽: "
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="住住: 专 砖"
                    android:textSize="16sp"
                    android:textColor="#ED8936"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="砖: 砖专 转"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 砖: 11:00 - 19:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
