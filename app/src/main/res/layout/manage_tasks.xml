<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:padding="16dp"
    android:gravity="right">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layoutDirection="rtl">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 🎮 GameZone 🎮
     ניהול משימות"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp"/>

    <!-- כותרת עם התאריך -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ ניהול משימות ליום   11.3.2025  "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layoutDirection="rtl"/>

    <!-- תוכן ניהול משימות -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- פרטי המשימה עבור כל עובד -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- שם העובד, תפקיד וסטטוס -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="נילי (מזכירה)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="מחלקה: אדמיניסטרציה"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="סטטוס: בעבודה"
                    android:textSize="16sp"
                    android:textColor="#E53E3E"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="משימה: עדכון נתונים במערכת"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="זמן משימה: 9:00 - 17:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

            <!-- פרטי המשימה עבור עובד נוסף -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- שם העובד, תפקיד וסטטוס -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ארקדי (עובד)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="מחלקה: מכירות"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="סטטוס: ממתין"
                    android:textSize="16sp"
                    android:textColor="#F6AD55"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="משימה: עדכון מלאי במערכת"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="זמן משימה: 10:00 - 18:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

            <!-- פרטי המשימה עבור עובד נוסף -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- שם העובד, תפקיד וסטטוס -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="עדן (תמיכה טכנית)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="מחלקה: תמיכה טכנית"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="סטטוס: הושלם"
                    android:textSize="16sp"
                    android:textColor="#48BB78"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="משימה: פתרון בעיות תמיכה"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="זמן משימה: 8:00 - 16:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

            <!-- פרטי המשימה עבור עובד נוסף -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <!-- שם העובד, תפקיד וסטטוס -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ספיר (מנהל)"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="מחלקה: ניהול"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="סטטוס: בדרך לשליחה"
                    android:textSize="16sp"
                    android:textColor="#ED8936"
                    android:gravity="start"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="משימה: אישור הזמנות"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="זמן משימה: 11:00 - 19:00"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="start"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
