<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:gravity="center"
    android:layoutDirection="rtl">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:padding="16dp"
        android:text="ברוכים הבאים לאתר GameZone"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/custom_container"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="8dp"
        android:backgroundTint="#E2E8F0"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔑 כניסה למערכת"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#CBD5E1"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✉️"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="כתובת אימייל"
                android:inputType="textEmailAddress"
                android:textColorHint="#64748B"
                android:gravity="right"
                android:layoutDirection="rtl"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#CBD5E1"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔒"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="סיסמה"
                android:inputType="textPassword"
                android:textColorHint="#64748B"
                android:gravity="right"
                android:layoutDirection="rtl"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔵 התחבר"
            android:textColor="@android:color/white"
            android:backgroundTint="#3B82F6"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 הרשמה"
            android:textColor="@android:color/white"
            android:backgroundTint="#059669"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>