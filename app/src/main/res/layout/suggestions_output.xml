<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7FAFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎮 GameZone 🎮   🎯 המלצות אישיות"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3182CE"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שלום ישראל! הנה ההמלצות שלנו במיוחד עבורך"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="16dp"/>

            <!-- המלצה 1: חבילת PS5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ps5"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="חבילת PlayStation 5 Deluxe"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="קונסולת PS5 + שלטים + משחק לבחירה + אוזניות מקצועיות. הכל במחיר מיוחד!"
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="חבילות"
                                android:textSize="12sp"
                                android:background="#F0F0F0"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐ 4.9"
                                android:textSize="12sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="₪2499.90"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#3182CE"
                                android:gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="הוסף לסל"
                                android:textSize="12sp"
                                android:backgroundTint="#3182CE"
                                style="@style/Widget.MaterialComponents.Button"
                                android:padding="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="פרטים נוספים"
                                android:textSize="12sp"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:padding="8dp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- המלצה 2: כיסא גיימינג -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/chair"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="כיסא גיימינג DXRacer Formula"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="כיסא גיימינג מקצועי עם תמיכה מלאה לגב ולמותניים. מושלם לשעות ארוכות של משחק."
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ציוד היקפי"
                                android:textSize="12sp"
                                android:background="#F0F0F0"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐ 4.8"
                                android:textSize="12sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="₪1499.90"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#3182CE"
                                android:gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="הוסף לסל"
                                android:textSize="12sp"
                                android:backgroundTint="#3182CE"
                                style="@style/Widget.MaterialComponents.Button"
                                android:padding="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="פרטים נוספים"
                                android:textSize="12sp"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:padding="8dp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- המלצה 3: אוזניות גיימינג -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/raze"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="אוזניות Razer BlackShark V2 Pro"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="אוזניות אלחוטיות עם סאונד מרחבי 7.1. מיקרופון נשלף באיכות גבוהה וסוללה ל-24 שעות."
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="אביזרים"
                                android:textSize="12sp"
                                android:background="#F0F0F0"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐ 4.8"
                                android:textSize="12sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="₪799.90"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#3182CE"
                                android:gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="הוסף לסל"
                                android:textSize="12sp"
                                android:backgroundTint="#3182CE"
                                style="@style/Widget.MaterialComponents.Button"
                                android:padding="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="פרטים נוספים"
                                android:textSize="12sp"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:padding="8dp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
