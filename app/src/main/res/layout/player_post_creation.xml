<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 转专转 注 注  GameZone -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2D3748"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" GameZone  驻专住 注 砖拽"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.appcompat.widget.Toolbar>



        <!-- 专转 拽住 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="专/ 驻驻专转 砖拽"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/console_playstation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PlayStation"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#3B82F6"/>

                <Button
                    android:id="@+id/console_xbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xbox"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#059669"/>

                <Button
                    android:id="@+id/console_nintendo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nintendo"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#D97706"/>

                <Button
                    android:id="@+id/console_pc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PC Gaming"
                    android:backgroundTint="#7C3AED"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 砖 砖转砖 驻驻专 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 砖 砖转砖 砖 驻驻专?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/gamer_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>

        <!-- 砖拽 注祝 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="砖拽  转/ 驻砖 砖转驻"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/favorite_game_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>


        <!-- 转专 住祝 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注 住祝"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/additional_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="住祝 转专 注 注爪 注 住 砖拽 砖"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>

        <!-- 驻转专 驻专住 -->
        <Button
            android:id="@+id/publish_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="驻专住 注"
            android:backgroundTint="#28A745"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>