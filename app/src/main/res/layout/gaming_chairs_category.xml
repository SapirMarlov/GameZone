<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:layoutDirection="rtl">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start"
            android:contentDescription="חזרה למסך הקודם" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🪑 כיסאות גיימינג | GameZone"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp" />

    <!-- Color filter options -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="צבע:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/color_black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/color_red"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FF0000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/color_blue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#0000FF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/color_green"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00FF00"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/color_white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Chair 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:text="🪑"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:background="#E2E8F0"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="כיסא גיימינג פרו"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="כיסא ארגונומי מקצועי, תמיכת גב מלאה"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₪1,299"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#3182CE"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="צבעים זמינים: שחור, אדום"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_chair_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Chair 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:text="🪑"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:background="#E2E8F0"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="כיסא גיימינג ספורט"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="עיצוב ספורטיבי, ריפוד עור PU, משענות ידיים מתכווננות"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₪899"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#3182CE"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="צבעים זמינים: שחור, כחול, ירוק"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_chair_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Chair 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:text="🪑"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:background="#E2E8F0"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="כיסא גיימינג אקסטרים"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="מנגנון הטיה 180°, כרית ראש וגב, עומס עד 150 ק״ג"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₪1,499"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#3182CE"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="צבעים זמינים: כל הצבעים"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/add_to_cart_chair_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="הוסף לסל"
                    android:backgroundTint="#38A169"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>