<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:padding="16dp"
    android:gravity="start|center_vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3748"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:padding="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 驻转 拽  GameZone "
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBD5E1"
        android:layout_marginTop="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 专住 驻专 驻 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="驻专 驻"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CBD5E1"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住驻专 驻:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/request_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#5678"
                            android:textSize="14sp"
                            android:textColor="#3182CE"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="砖 拽:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住 "
                            android:textSize="14sp"
                            android:textColor="#3182CE"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="驻:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/customer_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="050-1234567"
                            android:textSize="14sp"
                            android:textColor="#3182CE"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="爪专:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 拽住转 "
                            android:textSize="14sp"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转专 驻转:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/request_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21/04/2025"
                            android:textSize="14sp"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CBD5E1"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layoutDirection="rtl">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转 驻:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/request_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 拽住  驻注转 专 专 注 专住."
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:padding="8dp"
                            android:background="#F9FAFB"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 专住 住住 驻 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="住住 驻"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CBD5E1"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#F6AD55"
                            android:layout_marginBottom="12dp"/>

                        <RadioGroup
                            android:id="@+id/status_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layoutDirection="rtl">

                            <RadioButton
                                android:id="@+id/status_waiting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="转"
                                android:textColor="#F6AD55"
                                android:layout_marginStart="16dp"/>

                            <RadioButton
                                android:id="@+id/status_in_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="驻"
                                android:textColor="#3182CE"
                                android:layout_marginStart="16dp"/>

                            <RadioButton
                                android:id="@+id/status_completed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="砖"
                                android:textColor="#38A169"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 专住 住专转 驻 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="住专转 驻"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CBD5E1"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layoutDirection="rtl"
                        android:background="#F9FAFB"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layoutDirection="rtl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="21/04/2025 09:15"
                                android:textSize="12sp"
                                android:textColor="#4A5568"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | 驻转 驻"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#3182CE"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="拽 驻转 驻 砖 注 注  拽住转 ."
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layoutDirection="rtl"
                        android:background="#F9FAFB"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layoutDirection="rtl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="21/04/2025 10:30"
                                android:textSize="12sp"
                                android:textColor="#4A5568"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | 砖转 驻"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#3182CE"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="住 爪专 拽砖专 注 拽 -  注 砖."
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CBD5E1"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layoutDirection="rtl">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住驻转 注专 砖:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginBottom="8dp"/>



                        <CheckBox
                            android:id="@+id/contact_attempt_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注砖 住 爪专转 拽砖专 注 拽"
                            android:textSize="14sp"
                            android:layoutDirection="rtl"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/add_comment_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住祝 注专"
                            android:backgroundTint="#3182CE"
                            android:textColor="#ffffff"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 驻转专 驻注 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/close_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住专 驻"
                    android:backgroundTint="#38A169"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>