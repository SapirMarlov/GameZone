<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F7FAFC">

    <!-- 转专转 住 拽 注 砖 专 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" GameZone "
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3182CE"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- 转专转 专  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专  砖专 !"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- 驻转专 爪转 驻专驻, 转, 转 拽 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- 驻转专 爪转 驻专驻 -->
        <Button
            android:id="@+id/view_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 爪转 驻专驻"
            android:backgroundTint="#3182CE"
            android:textColor="#ffffff"
            android:padding="14dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- 驻转专 爪转 转 -->
        <Button
            android:id="@+id/view_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 爪转 转"
            android:backgroundTint="#38A169"
            android:textColor="#ffffff"
            android:padding="14dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- 驻转专 转 拽 -->
        <Button
            android:id="@+id/customer_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 转 拽"
            android:backgroundTint="#DD6B20"
            android:textColor="#ffffff"
            android:padding="14dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

</LinearLayout>
