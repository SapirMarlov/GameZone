<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:padding="16dp">

    <!-- כותרת מסך תשלום -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תשלום"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- סיכום הזמנה -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="סכום כולל: ₪1,999"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="16dp"/>

    <!-- בחירת אמצעי תשלום -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר אמצעי תשלום"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/payment_method_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/payment_credit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כרטיס אשראי"/>

        <RadioButton
            android:id="@+id/payment_paypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayPal"/>
    </RadioGroup>

    <!-- כפתור אישור רכישה -->
    <Button
        android:id="@+id/confirm_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אישור רכישה"
        android:backgroundTint="#28a745"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
